{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "This is typically near end of all extends and will forcibly group and override any security related fixes to be seperated regardless of default matching behaviors.",
  "osvVulnerabilityAlerts": true,
  "vulnerabilityAlerts": {
    "groupName": "🛡️ vulnerability [{{{vulnerabilitySeverity}}}]",
    "commitMessageSuffix": "",
    "enabled": true,
    "semanticCommitType": "security",
    "prCreation": "immediate",
    "labels": ["security", "ignore-stale", "dependencies"],
    "schedule": ["at any time"],
    "recreateWhen": "always",
    "branchTopic": "{{{datasource}}}-vulnerability",
    "commitMessageAction": "🛡️ {{updateType}}"
  }
}
