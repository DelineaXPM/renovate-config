{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        ":semanticCommitTypeAll(chore)",
        "github>whitesource/merge-confidence:beta"
    ],
    "labels": [
        "dependencies"
    ],
    "semanticCommits": "enabled",
    "pruneStaleBranches": true,
    "rebaseWhen": "behind-base-branch",
    "semanticCommitType": "chore",
    "semanticCommitScope": "deps",
    "platformAutomerge": true,
    "automergeStrategy": "squash",
    "unicodeEmoji": true,
    "rangeStrategy": "pin",
    "postUpdateOptions": [
        "gomodTidy",
        "gomodUpdateImportPaths"
    ],
    "gomod": {
        "enabled": true,
        "commitMessageTopic": "‚¨ÜÔ∏è golang module {{depName}}"
    },
    "docker": {
        "enabled": true,
        "commitMessageTopic": "‚¨ÜÔ∏è docker update üê≥ {{depName}}"
    },
    "vulnerabilityAlerts": {
        "enabled": true,
        "labels": [
            "security"
        ]
    },
    "npm": {
        "commitMessageTopic": "‚¨ÜÔ∏è npm update {{depName}}",
        "fileMatch": [
            "(^|/)package.json$"
        ],
        "rollbackPrs": true,
        "versioning": "npm"
    },
    "terraform": {
        "commitMessageTopic": "‚¨ÜÔ∏è terraform update {{depName}}",
        "enabled": true
    },
    "packageRules": [
        {
            "matchPackagePatterns": [
                "aws-sdk"
            ],
            "groupName": "aws-sdk"
        },
        {
            "matchPaths": [
                "magefiles"
            ],
            "groupName": "mage-tooling"
        },
        {
            "matchManagers": [
                "npm"
            ],
            "matchDepTypes": [
                "devDependencies"
            ],
            "enabled": true,
            "groupName": "npm-devdependencies",
            "stabilityDays": 5
        },
        {
            "matchDatasources": [
                "npm"
            ],
            "stabilityDays": 5
        }
    ]
}